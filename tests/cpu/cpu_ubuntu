#!/bin/bash

ITERATIONS=10
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
OUTPUT_DIR=$DIR/output
DATETIME=$(date +%Y-%m-%dT%H:%M:%S%z)
LOGFILE_NAME=$OUTPUT_DIR/$DATETIME-$1-cpu.log

run_test() {
    for ((i=1; i<=$ITERATIONS;i++)); do
        sysbench cpu run
    done
}

run_test &> $LOGFILE_NAME
